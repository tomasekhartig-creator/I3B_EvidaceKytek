<Window x:Class="I3B_EvidaceKytek.Windows.AddNewFlowerWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I3B_EvidaceKytek.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="BlanchedAlmond"
        Title="AddNewFlowerWindows" Height="250" Width="250">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="21,29,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameInput"  HorizontalAlignment="Left" Margin="81,33,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Genus:" HorizontalAlignment="Left" Margin="21,66,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="GenusInput"  HorizontalAlignment="Left" Margin="81,70,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Label Content="Color:" HorizontalAlignment="Left" Margin="21,99,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ColorInput" HorizontalAlignment="Left" Margin="81,101,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Yellow"/>
            <ComboBoxItem Content="Purple"/>
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Black"/>
        </ComboBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="133,163,0,0" VerticalAlignment="Top" Width="97" RenderTransformOrigin="0.162,0.49" Click="SaveButton_Click"/>
        <Button Content="Discard &amp; Close" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Width="97"/>

    </Grid>
</Window>
